@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-area">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-12 col-12">
                <div class="hero-content">
                    <h4 class="wow fadeInUp" data-wow-delay=".2s">Facilitando o seu dia-a-dia</h4>
                    <h1 class="wow fadeInUp" data-wow-delay=".4s">Através da Tecnologia</h1>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Hero Area -->
<!-- Start Services Area -->
<div class="services section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title">
                    <h2 class="wow fadeInUp" data-wow-delay=".2s">O Que Deseja Fazer Hoje</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-12 wow fadeInUp" data-wow-delay=".2s">
                <div class="single-service">
                    <a href="@Url.Action("CadastrarCliente","Cliente")">

                        <h4 class="text-title">Cadastrar Cliente</h4>
                        <p>
                            Para cadastrar um novo cliente click aqui.

                        </p>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12 wow fadeInUp" data-wow-delay=".4s">
                <div class="single-service">
                    <a href="@Url.Action("CadastrarProduto","Produto")">
                    
                        <h4 class="text-title">Cadastrar Produto</h4>
                        <p>
                            Para cadastrar um novo produto click aqui.
                        </p>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-12 wow fadeInUp" data-wow-delay=".6s">
                <div class="single-service">
                    <a href="@Url.Action("CadastrarPedido","Pedido")">

                        <h4 class="text-title">Fazer um pedido</h4>
                        <p>
                            Para cadastrar um novo pedido click aqui.

                        </p>
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
