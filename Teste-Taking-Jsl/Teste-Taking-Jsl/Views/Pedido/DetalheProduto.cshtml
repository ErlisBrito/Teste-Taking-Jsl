@model Teste_Taking_Jsl.Application.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhe Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="preloader">
    <div class="preloader-inner">
        <div class="preloader-icon">
            <span></span>
            <span></span>
        </div>
    </div>
</div>
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 offset-lg-3 col-md-12 col-12">
                <div class="breadcrumbs-content">
                    <ul class="breadcrumb-nav">
                        <li> <a class="btn" href="@Url.Action("Index","Home")">Home</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="about section">
    <div class="container">
        <div class="row align-items-center">

            <h4>Produto Detalhe</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Codigo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    Nome
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    Preço
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Preco)
                </dd>
                <dt class="col-sm-2">
                    Quantidade
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>
                <dt class="col-sm-2">
                    Data do Cadastro
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataCadastro)
                </dd>
                <dt class="col-sm-2">
                    Data da Alteração
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataAlteracao)
                </dd>
            </dl>
        </div>
        <div>
            <a class="d-flex justify-content-center" href="@Url.Action("Index","Pedido")">
                Voltar
            </a>
        </div>
    </div>



</section>
